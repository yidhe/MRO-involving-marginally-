clear;clc;
clear all
clf;
subplot(3,1,1)
y11=490:0.1:500; r1=2; l1=2; r2=10; l2=10; T=500;
d11=((y11-490)./(500-490)).^l1;
plot(y11,d11,'c')
hold on
d21=((y11-490)./(500-490)).^l2;
plot(y11,d21,'b')
hold on
fill ([y11,fliplr(y11)],[d11,fliplr(d21)],'c')
hold on

y12=500:0.1:510;
d11=((510-y12)./(510-500)).^r1;
plot(y12,d11,'c')
hold on
d21=((510-y12)./(510-500)).^r2;
plot(y12,d21,'b')
hold on
fill ([y12,fliplr(y12)],[d11,fliplr(d21)],'c')
hold on

% 添加辅助线；
y=489:0.1:511;
m1=0*y+1;
plot(y,m1,'k')
hold on
y=489:0.1:490;
m2=0*y+0;
plot(y,m2,'k')
y=510:0.1:511;
m3=0*y+0;
plot(y,m3,'k')
hold on
line([490 490],[0 1]);
hold on
line([500 500],[0 1]);
hold on
line([510 510],[0 1]);
hold on

subplot(3,1,2)

y11=490:0.1:500; r1=0.5; l1=0.5; r2=5; l2=5; T=500;
d11=((y11-490)./(500-490)).^l1;
